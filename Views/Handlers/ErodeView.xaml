<UserControl x:Class="cumcad.Views.Handlers.ErodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cumcad.Views.Handlers"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="165"
          Height="90">
        <Border Background="#22000000"
                CornerRadius="3"
                BorderThickness="1"
                BorderBrush="AliceBlue">
            <StackPanel HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                <Grid>
                    <TextBox Width="58"
                             Height="20"
                             IsTabStop="False"
                             IsReadOnly="False"
                             Text="{Binding Width, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             TextWrapping="NoWrap"
                             FontSize="12"
                             HorizontalAlignment="Left"
                             Margin="18, 0, 10, 22"
                             TextAlignment="Center"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Brush W"
                             materialDesign:HintAssist.Foreground="AliceBlue"
                             materialDesign:HintAssist.FloatingOffset="0, 20"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Background="Transparent"
                             Foreground="AliceBlue"
                             Padding="0, 0"
                             AcceptsReturn="False" />
                    <TextBox Width="58"
                             Height="20"
                             IsTabStop="False"
                             IsReadOnly="False"
                             Text="{Binding Height, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                             TextWrapping="NoWrap"
                             FontSize="12"
                             HorizontalAlignment="Right"
                             Margin="10, 0, 18, 22"
                             TextAlignment="Center"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Brush H"
                             materialDesign:HintAssist.Foreground="AliceBlue"
                             materialDesign:HintAssist.FloatingOffset="0, 20"
                             materialDesign:HintAssist.FloatingScale="1"
                             materialDesign:HintAssist.Background="Transparent"
                             Foreground="AliceBlue"
                             Padding="0, 0"
                             AcceptsReturn="False" />
                </Grid>
                <TextBox Width="58"
                         Height="20"
                         IsTabStop="False"
                         IsReadOnly="False"
                         Text="{Binding Iters, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         TextWrapping="NoWrap"
                         FontSize="12"
                         HorizontalAlignment="Center"
                         Margin="18, 0, 10, 12"
                         TextAlignment="Center"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Iters"
                         materialDesign:HintAssist.Foreground="AliceBlue"
                         materialDesign:HintAssist.FloatingOffset="2, 20"
                         materialDesign:HintAssist.FloatingScale="1"
                         materialDesign:HintAssist.Background="Transparent"
                         Foreground="AliceBlue"
                         Padding="6, 0"
                         AcceptsReturn="False" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
